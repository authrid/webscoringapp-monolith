@model WebScoringApp.Models.GroupInformation
@{
    ViewData["Title"] = "Edit Group Information";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>
<hr />

<div class="card shadow-sm mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BobotB" class="form-label fw-bold"></label>
                <input asp-for="BobotB" class="form-control" />
                <span asp-validation-for="BobotB" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success me-2">
                    <i class="bi bi-pencil-square"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
