@model WebScoringApp.Models.RiskCategory

@{
    ViewData["Title"] = "Create Risk Category";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>
<hr />

<div class="card shadow-sm mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ScoreMin" class="control-label fw-bold"></label>
                <input asp-for="ScoreMin" class="form-control" />
                <span asp-validation-for="ScoreMin" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="ScoreMax" class="control-label fw-bold"></label>
                <input asp-for="ScoreMax" class="form-control" />
                <span asp-validation-for="ScoreMax" class="text-danger"></span>
            </div>
            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
