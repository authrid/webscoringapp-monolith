@model ItemOption

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-center text-danger mb-4">Delete Confirmation</h2>

<div class="alert alert-warning text-center">
    <strong>Are you sure you want to delete this record?</strong>
</div>

<div class="card shadow-sm mx-auto" style="max-width: 500px;">
    <div class="card-body p-0">
        <table class="table table-bordered mb-0">
            <tbody>
                <tr>
                    <th class="bg-light" style="width: 30%">@Html.DisplayNameFor(model => model.Name)</th>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <th class="bg-light">@Html.DisplayNameFor(model => model.BobotF)</th>
                    <td>@Model.BobotF</td>
                </tr>
                <tr>
                    <th class="bg-light">@Html.DisplayNameFor(model => model.GroupItem)</th>
                    <td>@Model.GroupItem?.Name</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-4 text-center">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger me-2">
        <i class="bi bi-trash"></i> Delete
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Cancel
    </a>
</form>