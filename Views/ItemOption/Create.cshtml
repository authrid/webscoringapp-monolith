@model ItemOption

@{
    ViewData["Title"] = "Create Item Option";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>
<hr />

<div class="card shadow-sm mx-auto" style="max-width: 500px;">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <!-- Dropdown Group Information -->
            <div class="mb-3">
                <label class="form-label fw-bold">Group Information</label>
                <select id="GroupInformationId" class="form-select">
                    <option value="">-- Pilih Group Information --</option>
                    @{
                        var groups = ViewBag.GroupInformations as List<WebScoringApp.Models.GroupInformation>;
                        if (groups != null)
                        {
                            foreach (var group in groups)
                            {
                                <option value="@group.Id">@group.Name</option>
                            }
                        }
                    }
                    @* @foreach (var group in ViewBag.GroupInformations as List<WebScoringApp.Models.GroupInformation>)
                    {
                        <option value="@group.Id">@group.Name</option>
                    } *@
                </select>
            </div>

            <!-- Dropdown Group Item -->
            <div class="mb-3">
                <label asp-for="GroupItemId" class="form-label fw-bold"></label>
                <select asp-for="GroupItemId" id="GroupItemId" class="form-select">
                    <option value="">-- Pilih Group Item --</option>
                </select>
                <span asp-validation-for="GroupItemId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BobotF" class="form-label fw-bold"></label>
                <input asp-for="BobotF" class="form-control" />
                <span asp-validation-for="BobotF" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="HighRisk" class="form-label fw-bold"></label>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="HighRisk" value="true" />
                    <label class="form-check-label">Ya</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="HighRisk" value="false" />
                    <label class="form-check-label">Tidak</label>
                </div>
                <span asp-validation-for="HighRisk" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-save"></i> Create
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.getElementById("GroupInformationId").addEventListener("change", function () {
            var groupInfoId = this.value;
            var groupItemDropdown = document.getElementById("GroupItemId");
            groupItemDropdown.innerHTML = '<option value="">-- Pilih Group Item --</option>';

            if (groupInfoId) {
                fetch('/ItemOption/GetGroupItemsByGroupInfo?groupInfoId=' + groupInfoId)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(function (item) {
                            var opt = document.createElement('option');
                            opt.value = item.id;
                            opt.text = item.name;
                            groupItemDropdown.appendChild(opt);
                        });
                    });
            }
        });
    </script>
}
